$("ul.errors").html("");
<% if @product.errors.any? %>
  <% @product.errors.full_messages.each do |message| %>
    $("#errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $("#product-modal").modal("hide");
  var trRow = $('#products_table tr[data-id="<%= @product.id %>"]');
  var trRowPrev = trRow.prev();
  trRow.remove();
  if (trRowPrev.data()){
    trRowPrev.after("<%= j render 'index', product: @product %>");
  }else{
    $('#products_table').prepend("<%= j render 'index', product: @product %>");
  }

<% end %>
